<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/results_id"
        android:layout_width="300dp"
        android:layout_height="119dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="132dp"
        app:layout_constraintBottom_toTopOf="@+id/red_view_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.143"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047" />

    <View
        android:id="@+id/green_view_id"
        android:layout_width="333dp"
        android:layout_height="0dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="100dp"
        android:background="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/results_id" />

    <View
        android:id="@+id/red_view_id"
        android:layout_width="268dp"
        android:layout_height="0dp"
        android:layout_marginBottom="156dp"
        android:background="#ED0C0C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/results_id" />

    <View
        android:id="@+id/blue_view_id"
        android:layout_width="209dp"
        android:layout_height="207dp"
        android:background="#2196F3"
        app:layout_constraintBottom_toBottomOf="@+id/red_view_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/red_view_id" />


</androidx.constraintlayout.widget.ConstraintLayout>