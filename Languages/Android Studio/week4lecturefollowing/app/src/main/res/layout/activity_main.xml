<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/green_view_id"
        android:layout_width="316dp"
        android:layout_height="419dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#8BC34A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/results_id" />

    <EditText
        android:id="@+id/results_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/red_view_id"
        android:layout_width="161dp"
        android:layout_height="346dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:background="#F44336"
        app:layout_constraintEnd_toEndOf="@+id/green_view_id"
        app:layout_constraintStart_toStartOf="@+id/green_view_id"
        app:layout_constraintTop_toTopOf="@+id/green_view_id" />

    <View
        android:id="@+id/blue_view_id"
        android:layout_width="79dp"
        android:layout_height="253dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:background="#2196F3"
        app:layout_constraintEnd_toEndOf="@+id/red_view_id"
        app:layout_constraintStart_toStartOf="@+id/red_view_id"
        app:layout_constraintTop_toTopOf="@+id/red_view_id" />

</androidx.constraintlayout.widget.ConstraintLayout>